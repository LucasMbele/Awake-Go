<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/colorPrimary"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <ImageButton
        android:id="@+id/btn_happy"
        android:rotation="28"
        android:layout_margin="15dp"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@drawable/ic_laughing"
        android:clickable="true"></ImageButton>
    <ImageButton
        android:id="@+id/btn_sad"
        android:layout_margin="15dp"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:background="@drawable/ic_confused"
        android:clickable="true"></ImageButton>

</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        >
        <TextView
            android:id="@+id/quotes"
            android:visibility="invisible"
            android:layout_width="@dimen/size_shape_quotes_width"
            android:textColor="#00000f"
            android:layout_margin="55dp"
            android:layout_gravity="center"
            android:layout_height="@dimen/size_shape_quotes_height"
            android:background="@drawable/rectangle"
            android:fontFamily="@font/oswald_bold"
            android:text=""
            android:textSize="@dimen/size_description_quote" />

        <TextView
            android:id="@+id/author"
            android:layout_width="wrap_content"
            android:visibility="invisible"
            android:textColor="#00000f"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_gravity="center"
            android:text=""
            android:textSize="@dimen/size_author_quote" />
    </LinearLayout>

</LinearLayout>