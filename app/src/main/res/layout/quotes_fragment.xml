<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/colorPrimaryDark"
    >

    <TextView
        android:layout_width="@dimen/size_shape_quotes_width"
        android:textColor="#00000f"
        android:layout_height="@dimen/size_shape_quotes_height"
        android:background="@drawable/rectangle"
        android:fontFamily="@font/oswald_bold"
        android:gravity="center"
        android:text="Life is the purpose, so don't give up !"
        android:textSize="@dimen/size_description_quote" />

    <TextView
        android:layout_width="wrap_content"
        android:textColor="#00000f"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_margin="15dp"
        android:text="Lucas Mbele"
        android:textSize="@dimen/size_author_quote" />

</LinearLayout>